<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- android theme colors -->
        <item name="android:colorPrimary">#ffe72b20</item>
        <item name="android:colorPrimaryDark">#ff9f1509</item>
        <item name="android:colorAccent">#ffe72b20</item>
        <item name="android:navigationBarColor">#ffe72b20</item>
        <item name="android:toolbarStyle">@style/MyToolbar</item>
        <!-- android transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowMenuButton</item>
    </style>

    <style name="HomeButton">
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/item_circle</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CatButton">
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/selector_circle</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#ff9f1509</item>
    </style>

    <style name="MyToolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">#ff593d2b</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">#ffffaa39</item>
    </style>

<style name="OverflowMenuButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
<item name="android:src">@drawable/abc_ic_menu_moreoverflow_mtrl_alpha</item>
</style>

<style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
<item name="spinBars">true</item>
<item name="color">@android:color/white</item>
</style>

<style name="SlidingTextViewStyle" parent="@android:style/Widget.TextView">
<item name="android:fontFamily">sans-serif-medium</item>
<item name="android:textColor">#FFF</item>
</style>

</resources>
